<% if(theme.post_count.enable){ %>
	<% if(theme.post_count.wordcount){ %>
		<span class="post-wordcount" itemprop="wordCount">
			<%= __('article.wordcount') %>: <%= wordcount(post.content) %>(<%= __('unit.word') %>) </a>
		</span>
	<% } %>
	<% if(theme.post_count.min2read){ %>
		<span class="post-readcount" itemprop="timeRequired">
			<%= __('article.readcount') %>: <%= min2read(post.content) %>(<%= __('unit.time') %>)
		</span>
	<% } %>
<% } %>